# =============================================================================
# NAMASKAH SMS API - ENVIRONMENT TEMPLATE
# =============================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env for local development
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env files to version control
# 4. Use different values for each environment (dev/staging/prod)
#
# =============================================================================

# =============================================================================
# SECURITY (CRITICAL) - Generate unique keys for each environment
# =============================================================================
SECRET_KEY=CHANGE_ME_GENERATE_32_CHAR_SECRET_KEY_HERE
JWT_SECRET_KEY=CHANGE_ME_GENERATE_32_CHAR_JWT_SECRET_KEY_HERE
ENVIRONMENT=development

# =============================================================================
# APPLICATION
# =============================================================================
BASE_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# DATABASE - Use different databases for each environment
# =============================================================================
# Development (SQLite)
DATABASE_URL=sqlite:///./dev.db

# Production (PostgreSQL) - Replace with your actual credentials
# DATABASE_URL=postgresql://username:password@host:port/database_name

# =============================================================================
# AUTHENTICATION & JWT
# =============================================================================
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# SMS SERVICE (CORE FUNCTIONALITY)
# =============================================================================
TEXTVERIFIED_API_KEY=your-textverified-api-key-here
TEXTVERIFIED_EMAIL=your-email@domain.com

# =============================================================================
# PAYMENTS (CORE FUNCTIONALITY)
# =============================================================================
# Development/Test keys (safe to use in development)
PAYSTACK_PUBLIC_KEY=pk_test_your-test-public-key
PAYSTACK_SECRET_KEY=sk_test_your-test-secret-key

# Production keys (NEVER commit these)
# PAYSTACK_PUBLIC_KEY=pk_live_your-live-public-key
# PAYSTACK_SECRET_KEY=sk_live_your-live-secret-key

# =============================================================================
# EMAIL SERVICE (OPTIONAL)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# MONITORING & ERROR TRACKING (OPTIONAL)
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# REDIS CACHE (OPTIONAL)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CRYPTO ADDRESSES (DISPLAY ONLY - NOT SENSITIVE)
# =============================================================================
BITCOIN_ADDRESS=your-bitcoin-address-here
ETHEREUM_ADDRESS=your-ethereum-address-here
SOLANA_ADDRESS=your-solana-address-here
USDT_ADDRESS=your-usdt-address-here